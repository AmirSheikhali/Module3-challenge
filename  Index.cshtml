@page
@model Module3Challenge.Pages.IndexModel
@{
    ViewData["Title"] = "Zoo Visitors App";
}
<!--  this is the header for the webpage -->
<h1>Welcome to the Zoo Visitors App</h1>  

<!-- input the hunger level of the animals  -->

<form method="post">
    <label>Enter the animal's hunger level (1-10):</label>
    <input type="number" name="hungerLevel" min="1" max="10" required />
    
    <br><br>
    <!-- input for the days of the week -->
    <label>Enter the day of the week (1-7, where 1 is Sunday):</label>
    <input type="number" name="dayOfWeek" min="1" max="7" required />
    
    <br><br>
    
    <button type="submit">Submit</button>
</form>

  if (!string.IsNullOrEmpty(Model.HungerMessage))
{
    <p><strong>@Model.HungerMessage</strong></p>
    <p><strong>@Model.SoundMessage</strong></p>
    <p><strong>@Model.DayMessage</strong></p>
}
